
			
<div class="col-xs-3">
	<h2>User info</h2>
		<div class="profile_image">
			<%= attachment_image_tag user,:profile_image, fallback: "no-image.png",size:'80x80' %>
		</div>
		<table class="table">
			<tr></tr>
			<tr>
				<th>name</th>
				<th>sample</th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</table>
		<%= link_to edit_user_path(current_user),class: 'btn btn-default col-xs-12' do %>
			<div class="glyphicon glyphicon-wrench", class:btn btn-default>
			</div>
		<% end %>
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>
			<div class="title-name">Title</div>
				<%= f.text_field :title, class:"col-xs-12" %>
			<div class="opinion">Opinion</div>
				<%= f.text_area :opinion, class:"col-xs-12" %>
			<div class="create_book">
				<%= f.submit "Create Book" ,class:"btn btn-primary col-xs-12 data-disable-with" %>
			</div>
		<% end %>
</div>


			
		