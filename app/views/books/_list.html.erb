<div class="flash-box">
	<%= notice %>
    </div>
    <%= form_for(@book) do |f| %>
            <% if @book.errors.any? %>
                <p class="error"><%= @book.errors.count %>error prohibited this obj from being saved:</p>
                  <ul>
                    <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          <% end %>
    <% end %>
<div class="col-xs-3">
	
	<h2>User info</h2>
		<div class="profile_image">
			<%= attachment_image_tag @user, :profile_image , fallback: "no-image.png",size:'80x80' %>
		
		</div>
		<table class="table">
			<tr></tr>
			<tr>
				<th>name</th>
				<th>sample</th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= @user.introduction  %></th>
			</tr>
		</table>
		<%= link_to edit_user_path(current_user),class: 'btn btn-default col-xs-12' do %>
			<div class="glyphicon glyphicon-wrench", class:btn btn-default>
			</div>
		<% end %>
		<h2>New book</h2>
              <%= form_for(@book) do |f| %>
            		<div class="field row">
              			<label for="book_title">Title</label>
              				<%= f.text_field :title, class: "col-xs-12" %>
            		</div>
            		<div class="field row">
              			<label for="book_body">Opinion</label>
              				<%= f.text_area :body,class: "col-xs-12 "  %>
            		</div>
            		<div class="actions row">
              			<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
              <% end %>
      </div>
 
</div>


			
		