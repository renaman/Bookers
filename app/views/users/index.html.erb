<div class="body">
	<div class="container">
		<div class="row">
		<%= render 'books/list', books:@books,user:@user %>
		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table">
				<thead>	
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td>
							<%= attachment_image_tag @user,:profile_image, fallback: "no-image.png",size:'30x30' %>	
						</td>
						<td>
							<%= user.name %>
						</td>
						<td>
							<%= link_to "Show", book_path(user.id) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	</div>
</div>