<div class="body">
	<div class="container">
		<div class="row">
		<%= render 'books/list', books:@books,user:@user %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>	
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
								<%= attachment_image_tag @user,:profile_image, fallback: "no-image.png",size:'30x30' %>
						</td>
						<td>
							<%= link_to book.title, book_path %>
						</td>
						<td>
							<%= book.body %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	</div>
</div>
