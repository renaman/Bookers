<div class="body">
	<div class="container">
		<div class="row">
		<%= render 'books/list', books:@books,user:@user %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>	
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<a href="#">
								<%= attachment_image_tag @plofile_image, :image %>
							</a>
						</td>
						<td>
							<% book.title %>
						</td>
						<td>
							<% book.opinion %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	</div>
</div>

