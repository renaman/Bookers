<div class="body">
	<div class="container">
		<% if @user.errors.any? %>
			<h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                 	    <li><%= message %></li>
                　	<% end %>
              	</ul>
			<div class="box1">
				<h2>User info</h2>
				<%=form_for(@user) do |f| %>
 					<div class="name">Name
     					 <%= f.text_field :name %>
					</div>
					<div class="image">Image</div>
 						 <%= f.attachment_field :profile_image,placenholder:"プロフィール画像", class: "user-edit-form" %>
 
					<div class="introduction">Introduction
     					 <%= f.text_area :introduction %>
					</div>
 						<%= f.submit "Update User",class:"update" %>

				<% end %>
			</div>
		<% else %>	
			<div class="row">
				<%= render 'books/list', book:@book,user:@user %>
					<div class="col-xs-9">
						<h2>Books</h2>
							<table class="table table-hover">
								<thead>	
									<tr>
										<th></th>
										<th>Title</th>
										<th>Opinion</th>
										<th colspan="3"></th>
									</tr>
								</thead>
								<tbody>
									<% @books.each do |book| %>
										<tr>
											<td>
												<%= attachment_image_tag @user,:profile_image, fallback: "no-image.png",size:'30x30' %>
											</td>
											<td>
												<%= link_to book.title, book_path(book) %>
											</td>
											<td>
												<%= book.body %>
											</td>
										</tr>
									<% end %>
								</tbody>
							</table>
					</div>
			</div>
		<% end %>
	</div>
</div>
　